<div class="banner">
  <div>
    <h1>Gallery</h1>
    <div class="search-box">
      <%= form_with url: artworks_path, method: :get, class: "d-flex" do %>
        <%= submit_tag "âŒ•", class: "btn-search" %>
        <%= text_field_tag :query,
          params[:query],
          class: "input-search",
          placeholder: "Search for Artwork"
        %>
      <% end %>
    </div>
  </div>
</div>

<div class="index-cards">
  <% @artworks.each do |artwork| %>
      <div class="index-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  url( <%= cl_image_path artwork.photo.key %> )">
        <a href="<%= artwork_path(artwork) %>">
          <%= artwork.name %>
          <br>
          <em><%= artwork.artist %></em>
        </a>
      </div>
  <% end %>
</div>
