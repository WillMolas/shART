<div class="form-banner">
  <h1>Add New Artwork</h1>
</div>

<div class="form-container">
  <div class="frame">
      <%= simple_form_for(@artwork) do |f| %>
      <div class="form-input">
        <div class="name-input">
          <%= f.input :name %>
        </div>
        <div class="name-input">
          <%= f.input :artist %>
        </div>
      </div>
      <div class="form-input">
        <div class="name-input">
          <%= f.input :category %>
        </div>
        <div class="name-input">
          <%= f.input :price %>
        </div>
      </div>
      <div class="form-input">
        <div class="name-input">
          <%= f.input :location %>
        </div>
        <div class="name-input">
          <%= f.input :measurements %>
        </div>
      </div>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "shART it!", class: "form-button" %>
    <% end %>
  </div>
</div>
